# Environment Variables Template for NLU Trading Indicators
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Binance API Configuration
# =============================================================================
# Optional - only needed for live data fetching
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
#
# Security recommendations:
# - Use API keys with read-only permissions (no trading/withdrawal)
# - Enable IP whitelist restrictions
# - Rotate keys regularly
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# =============================================================================
# Data Source Configuration
# =============================================================================
# DATA_SOURCE: Where to fetch market data from
#   - binance_live: Real-time data from Binance API (requires API keys)
#   - local_csv: Load data from CSV files (for backtesting)
#   - mock: Use synthetic data (for testing)
DATA_SOURCE=binance_live

# =============================================================================
# Logging Configuration
# =============================================================================
# LOG_LEVEL: Minimum severity level to log
#   - DEBUG: Detailed diagnostic information
#   - INFO: General informational messages (recommended for production)
#   - WARNING: Warning messages (something unexpected but not critical)
#   - ERROR: Error messages (serious problems)
#   - CRITICAL: Critical errors (system cannot continue)
LOG_LEVEL=INFO

# LOG_FILE: Path to log file (relative to project root)
# Log rotation is automatically enabled (10MB max, 5 backups)
LOG_FILE=logs/nlu_trading.log

# LOG_JSON: Use structured JSON logging format
# Options: true, false
# Recommended: true for production, false for development
LOG_JSON=false

# LOG_CONSOLE: Enable console output (in addition to file logging)
# Options: true, false
LOG_CONSOLE=true

# =============================================================================
# Application Settings
# =============================================================================
# DEFAULT_TIMEFRAME: Default candle interval for analysis
# Options: 1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 6h, 8h, 12h, 1d, 3d, 1w, 1M
DEFAULT_TIMEFRAME=1h

# MAX_CANDLES: Maximum number of historical candles to fetch
# Range: 1-1500 (Binance limit is 1500)
MAX_CANDLES=500

# =============================================================================
# Retry and Resilience Configuration
# =============================================================================
# API_MAX_RETRIES: Maximum number of retry attempts for API calls
API_MAX_RETRIES=3

# API_RETRY_BASE_DELAY: Base delay for exponential backoff (seconds)
API_RETRY_BASE_DELAY=1.0

# API_RETRY_MAX_DELAY: Maximum delay between retries (seconds)
API_RETRY_MAX_DELAY=30.0

# API_TIMEOUT_TOTAL: Total request timeout (seconds)
API_TIMEOUT_TOTAL=30.0

# API_TIMEOUT_CONNECT: Connection timeout (seconds)
API_TIMEOUT_CONNECT=10.0

# =============================================================================
# Analysis Settings
# =============================================================================
# ENABLE_VOLUME_ANALYSIS: Enable volume-based indicators
ENABLE_VOLUME_ANALYSIS=true

# ENABLE_FUNDING_ANALYSIS: Enable funding rate analysis (futures only)
ENABLE_FUNDING_ANALYSIS=true

# ENABLE_OI_ANALYSIS: Enable open interest analysis (futures only)
ENABLE_OI_ANALYSIS=true

# ENABLE_ORDERBOOK_ANALYSIS: Enable orderbook depth analysis
ENABLE_ORDERBOOK_ANALYSIS=true

# =============================================================================
# Development Settings
# =============================================================================
# DEBUG_MODE: Enable debug features and verbose logging
# Options: true, false
DEBUG_MODE=false

# CACHE_ENABLED: Enable result caching for performance
# Options: true, false
CACHE_ENABLED=true

# CACHE_TTL: Cache time-to-live in seconds
CACHE_TTL=300
